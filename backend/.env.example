# Backend Environment Variables
# Copy this file to .env and fill in your actual values
#
# For local development, you can also create .env.local to override specific values
# Priority: .env.local > .env

# =============================================================================
# DATABASE
# =============================================================================

# Local Docker PostgreSQL (recommended for development)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/splitzy

# Alternative: Neon cloud database (for staging/production)
# NEON_DATABASE_URL=postgresql://user:password@your-neon-host.neon.tech/splitzy?sslmode=require

# =============================================================================
# AUTHENTICATION (Clerk)
# =============================================================================

# Get this from https://dashboard.clerk.com
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Vercel serverless function URL for image upload
# In development, use localhost:3001 (default port for vercel dev)
VERCEL_FUNCTION_URL=http://localhost:3001/api/upload-to-blob

# Google API key for Gemini image analysis
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Flask secret key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_flask_secret_key_here

# Server port
PORT=5001

# Environment: development, preview, or production
VERCEL_ENV=development

# Frontend origin for CORS (in development mode, all origins are allowed)
FRONTEND_ORIGIN=http://localhost:5173

# CORS allowed origins (comma-separated, only used in production)
# CORS_ALLOWED_ORIGINS=https://your-app.vercel.app,https://your-custom-domain.com
